<Window x:Class="CommonWpf.Forms.ShowTextDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CommonWpf.Forms"
        mc:Ignorable="d"
        Title="Error" Height="800" Width="1200" ShowInTaskbar="False" WindowStartupLocation="CenterScreen">
	<Grid>
		<RichTextBox x:Name="textBox" Margin="10,10,10,40" FontFamily="Courier New" FontSize="12">
			<FlowDocument>
				<Paragraph>
					<Run x:Name="run" Text=""/>
				</Paragraph>
			</FlowDocument>
		</RichTextBox>
		<Button x:Name="btnClose" Content="Close" Margin="0,0,10,10" HorizontalAlignment="Right" Width="120" Height="22" VerticalAlignment="Bottom" IsCancel="True" IsDefault="True"/>
	</Grid>
</Window>
